@inherits LayoutComponentBase

<MudThemeProvider Theme="BaseViewModel.DefaultTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudGrid Style="height:100vh" Spacing="0">
    <MudItem xs="12" md="6">
        <MudPaper Style="margin:30px; padding:10%; border-radius:20px; height:90%; background-color:var(--mud-palette-primary); color:white; display:flex; flex-direction:column; justify-content:space-around;" Elevation="0">
            <MudImage Style=" width: 20%; -webkit-writing-mode: vertical-lr; position: absolute;" Src="images/birgit-logo.png" />
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="6" Style="align-self: center;">
        @Body
    </MudItem>
</MudGrid>